datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


/*────────────────────────── Course catalog ──────────────────────────*/

model Department {
  id    Int    @id @default(autoincrement())
  name  String @unique

  courses Course[] @relation("CoursesByDepartment")
}

model Professor {
  id       Int    @id @default(autoincrement())
  name     String @unique
  gender   String?

  instances CourseInstance[]
}

model Course {
  id             Int    @id @default(autoincrement())
  code           String @unique
  name           String
  description    String
  department     Department @relation("CoursesByDepartment", fields: [departmentId], references: [id])
  departmentId   Int

  /* Relations */
  instances CourseInstance[]
  aliases   CourseAlias[]
}

model CourseAlias {
  id       Int    @id @default(autoincrement())
  alias    String
  course   Course @relation(fields: [courseId], references: [id])
  courseId Int

  /* Ensures that the same alias is not duplicated for the same course */
  @@unique([courseId, alias])
}

model CourseInstance {
  id          Int    @id @default(autoincrement())

  /* Relations */
  course      Course     @relation(fields: [courseId], references: [id])
  courseId    Int
  professor   Professor  @relation(fields: [professorId], references: [id])
  professorId Int

  /* Academic period */
  year        Int
  semester    Int    // 1 = first semester, 2 = second semester

  reviews       Review[]

  /* Indexes */
  @@index([year, semester])
  @@unique([courseId, year, semester])
}

model Review {
  id               String        @id @default(cuid())
  createdAt        DateTime      @default(now())

  /* rating fields (1-5) */
  clarity          Int
  knowledge        Int
  workLoad         Int
  difficulty       Int
  overall          Int

  /* optional (1-7) */
  approximateMedian Int?

  comment          String?

  /*────────────────── relations ──────────────────*/
  courseInstance   CourseInstance @relation(fields: [courseInstanceId], references: [id])
  courseInstanceId Int            // FK to CourseInstance (holds year, semester & professor)


  @@index([courseInstanceId])
}



